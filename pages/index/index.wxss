/**index.wxss**/
page {
    text-align: center;
}

.swi {
    width: 100%;
    height: 220px;
}

.swi1 {
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 150px;
    background-color: lightblue;
}

.swi2 {
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 150px;
    background-color: lightpink;
}

.swi3 {
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 150px;
    background-color: lightgreen;
}

.bottomMenu {
    width: 100%;
    height: 60px;
    background-color: red;
    position: fixed;
    bottom: 0;
    left: 0;
}

#mid-buttons {
    width: 100%;
    height: 80px;
    text-align: center;
    background-color: red;
}

#mid-buttons button {
    display: inline-block;
    width: 100px;
    height: 60px;
    background-color: lightblue;
    border-radius: 15px;
    margin: 10px;
    line-height: 45px;
}

#mid-buttons #mid-button1 {
    margin-right: 80px;
}

.news {
    width: 100%;
    height: 50px;
    background-color: lightblue;
}

#trees-box {
    display: flex;
    width: 100%;
    background-color: rgb(255, 136, 0);
    flex-wrap: wrap;
    justify-content: center;
    padding-bottom: 100rpx;
    box-sizing: border-box;
}

.trees {
    width: 300rpx;
    height: 400rpx;
    background-color: lightgreen;
    margin: 25rpx;
    border-radius: 10px;
    overflow: hidden;
}

.treesPicBox {
    width: 100%;
    height: 300rpx;
    background-color: rgb(255, 0, 170);
}

.treesPic {
    width: 100%;
    height: 100%;
}

#viewMore {
    color: #fff;
    width: 300rpx;
    height: 80rpx;
    font-size: 30rpx;
    font-weight: 600;
    background-color: rgb(255, 0, 43);
    margin-top: 20px;
}