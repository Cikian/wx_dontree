.bottomMenu {
    width: 100%;
    height: 60px;
    background-color: red;
    position: fixed;
    bottom: 0;
    left: 0;
}

#mid-buttons {
    width: 100%;
    height: 80px;
    text-align: center;
    background-color: red;
}

#mid-buttons button {
    display: inline-block;
    width: 100px;
    height: 60px;
    background-color: lightblue;
    border-radius: 15px;
    margin: 10px;
    line-height: 45px;
}

#mid-buttons #mid-button1 {
    margin-right: 80px;
}

.news {
    width: 100%;
    height: 50px;
    background-color: lightblue;
}

#trees-box {
    width: 100%;
    height: 1000px;
    background-color: rgb(255, 136, 0);
}

.trees {
    display: inline-block;
    width: 180px;
    height: 240px;
    background-color: lightgreen;
    margin: 10px;
    border-radius: 10px;
    overflow: hidden;
}

.trees-pic {
    width: 100%;
    height: 180px;
    background-color: rgb(255, 0, 170);
}