/* pages/list/list.wxss */
#trees-box {
    display: flex;
    width: 100%;
    background-color: rgb(0, 162, 255);
    flex-wrap: wrap;
    justify-content: center;
    padding-bottom: 100rpx;
    box-sizing: border-box;
}

.trees {
    width: 300rpx;
    height: 400rpx;
    background-color: lightgreen;
    margin: 25rpx;
    border-radius: 10px;
    overflow: hidden;
}

.trees-pic {
    width: 100%;
    height: 300rpx;
    background-color: rgb(255, 115, 0);
}